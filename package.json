{
  "name": "growth-journal",
  "version": "0.0.30",
  "description": "A Progressive Web App for daily growth journaling and reflection.",
  "type": "module",
  "scripts": {
    "dev": "parcel src/index.pug --port 3000",
    "build": "parcel build src/index.pug",
    "release": "standard-version",
    "build:pwa": "npm run build && npm run copy-pwa-files",
    "copy-pwa-files": "powershell -Command \"Copy-Item src/manifest.json dist/; Copy-Item src/sw.ts dist/sw.js; if (Test-Path src/icons) { Copy-Item -Recurse src/icons dist/ }\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss,pug,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,scss,pug,json,md}\"",
    "clean": "rm -rf .parcel-cache dist",
    "test": "jest",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/jest",
    "test:unit:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/jest --runInBand --coverage --coverageReporters=lcov --coverageDirectory=coverage",
    "coverage:open": "npx http-server coverage/lcov-report -p 8081 --silent",
    "test:e2e": "playwright test tests/playwright",
    "test:playwright": "playwright test",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --reporters=default"
  },
  "targets": {
    "default": {
      "publicUrl": "./"
    }
  },
  "dependencies": {
    "@bladeski/logger": "^1.0.3"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.16.0",
    "@parcel/transformer-inline-string": "2.16.0",
    "@parcel/transformer-pug": "^2.16.0",
    "@parcel/transformer-webmanifest": "2.16.0",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.4",
    "@types/pug": "^2.0.10",
    "@types/serviceworker": "^0.0.167",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "parcel": "^2.12.0",
    "prettier": "^3.6.2",
    "pug": "^3.0.3",
    "standard-version": "^9.3.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "typescript",
    "parcel",
    "esmodules",
    "pwa",
    "growth-journal",
    "journaling",
    "reflection"
  ],
  "author": "Jonathan Blades <jonoblades@gmail.com>",
  "license": "MIT"
}
