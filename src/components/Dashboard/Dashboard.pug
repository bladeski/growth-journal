.dashboard-container
  header.app-header
    .header-content
      .app-title
        img.app-logo(src="../../images/logo.svg" alt="Growth Journal Logo")
        h1 Growth Journal
      .header-actions
        a.btn-primary(data-href="#/growth") Growth Journal
        a.btn-secondary(data-href="#/analytics") Analytics
        a.btn-secondary(data-href="#/settings") Settings
    .header-progress-bar
      .header-progress-fill(data-progress="{{completionPercentage}}")
  
  .dashboard-content
    .dashboard-grid
      card-component.today-progress
        span(slot="title") Today's Check-ins
        .checkin-status
          a.btn.checkin-item.morning-item(data-href="#/morning")
            .checkin-label Morning Intentions
            .checkin-status-text {{morningStatusText}}
          
          a.btn.checkin-item.midday-item(data-href="#/midday")
            .checkin-label Midday Reflection
            .checkin-status-text {{middayStatusText}}
          
          a.btn.checkin-item.evening-item(data-href="#/evening")
            .checkin-label Evening Integration
            .checkin-status-text {{eveningStatusText}}
      
      card-component.activity-summary
        span(slot="title") Recent Activity (7 days)
        .activity-stats
          .activity-stat
            .stat-value {{recentMorningCount}}
            .stat-label Morning Check-ins
          
          .activity-stat
            .stat-value {{recentMiddayCount}}
            .stat-label Midday Reflections
          
          .activity-stat
            .stat-value {{recentEveningCount}}
            .stat-label Evening Integrations
      
      card-component.recent-insights
        span(slot="title") Recent Insights
        .insights-list
      
      card-component.periodic-checkins
        span(slot="title") Periodic Check-ins
        .periodic-stats
            .periodic-item
              .period-label This Week
              .period-right
                .period-count {{weeklyCount}} weekly reviews
                a.btn-secondary(data-href="#/weekly") Add Weekly Review
          
            .periodic-item
              .period-label This Month
              .period-right
                .period-count {{monthlyCount}} monthly reflections
                a.btn-secondary(data-href="#/monthly") Add Monthly Reflection